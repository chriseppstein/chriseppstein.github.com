layout: nil
---
<?xml version="1.0" encoding="utf-8"?>
%feed(xmlns="http://www.w3.org/2005/Atom")
  %title #chris-eppstein {position: unique;}
  %link(href="http://chriseppstein.github.com/atom.xml" rel="self")
  %link(href="http://chriseppstein.github.com/")
  %updated= Time.now.xmlschema
  %id http://chriseppstein.github.com/
  %author
    %name Chris Eppstein
    %email chris[at]eppsteins[dawt]net
  - site.posts.reject{|p| p.data['draft']}.sort_by(&:date).reverse[0..14].each do |post|
    %entry
      %title= rp(post.title)
      - if post.data['link']
        %link(href="#{post.data['link']}")
      -else
        %link(href="#{full_url(post.url)}")
      %updated=post.date.xmlschema
      %id= full_url(post.id)
      %content(type="html")
        - if post.data['intro']
          = post.data['intro']
        - else
          = preserve absolute_url(rp(post.content))
        - if post.data['link']
          = h("<p><a href='#{full_url(post.url)} title='permanent link to #{rp(post.title)}'> &infin; </a><p>")
