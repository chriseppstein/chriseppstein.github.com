.blog
  - site.posts.sort_by(&:date).reverse[0..9].each_with_index do |post,index|
    .section{:class=>"#{(index==0 ? 'alpha' : (index==9 ? "omega" : nil))}"}
      %h3.header
        - if post.data["link"]
          = link_to(post.title, post.data["link"], {:class=>"title"})
          %a.permalink(href="#{post.url}") &infin;
        - else
          = link_to(post.title, post.url, {:class=>"title"})
      .article= post.content
      .footer
        - if post.data["comments_off"]
          %em.comments_off Comments disabled
        - else
          %a(href="#{post.url}/#disqus_thread")Leave a Comment &raquo;
  .see_more
    =link_to("&larr; Read more at the archives", "/blog/archives.html")