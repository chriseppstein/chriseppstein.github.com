.blog.mini
  .section
    - site.posts.sort_by(&:date).reverse[0..2].each_with_index do |post,index|
      .header
        - if post.data["link"]
          = link_to(post.title, post.data["link"], {:class=>"title"})
          %a.permalink(href="#{post.url}") &infin;
        - else
          = link_to(post.title, post.url, {:class=>"title"})
      .article
        - if post.data["exerpt"]
          = site.markdown("#{post.data['exerpt']} &hellip;")
        - else
          = post.content
      .footer
        - if post.data["comments_off"]
          %em.comments_off Comments disabled
        - else
          %a(href="#{post.url}/#disqus_thread")Comments
        %span.vr &nbsp;
        =link_to('Read More &raquo;', post.url, {:class=>'more'})
  .see_more.right
    <a href="/blog/">More from the blog &rarr;</a>