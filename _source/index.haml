.blog.mini
  - site.posts.sort_by(&:date).reverse[0..0].each do |post,index|
    .section{:class=>"#{(index==0 ? 'alpha' : (index==3 ? "omega" : nil))}"}
      - if post.data["link"]
        %h3.header.link
          = link_to(rp(style_amp(post.title)), post.data["link"], {:class=>"title"})
          %a.permalink(href="#{post.url}") &infin;
      - else
        %h3.header
          = link_to(rp(style_amp(post.title)), post.url, {:class=>"title"})
      .article
        - if post.data["exerpt"]
          = rp(site.markdown("#{post.data['exerpt']} &hellip; #{link_to('more &raquo;', post.url, {:class=>'more'})}"))
        - else
          = preserve rp(post.content)
      .footer
        - if post.data["comments_off"]
          %em.comments_off Comments disabled
        - else
          %a(href="#{post.url}/#disqus_thread")Comments