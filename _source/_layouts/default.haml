%html{:xmlns=>"http://www.w3.org/1999/xhtml", "xml:lang"=>"en", :lang=>"en"}
  %head
    %meta{:content=>"text/html; charset=utf-8", "http-equiv"=>"Content-Type"}
    %title= page.title
    - if page.respond_to? :description
      %meta{:name=>"description", :content=>page.description}/
    - if page.respond_to? :keywords
      %meta{:name=>"keywords", :content=>page.keywords}/
    %link{:href=>"/stylesheets/screen.css", :rel=>"stylesheet", :media=>"screen, projection", :type=>"text/css"}
    %script{:type=>"text/javascript", :src=>"/javascripts/mootools.js"}
    %script{:type=>"text/javascript", :src=>"/javascripts/site.js"}
  %body{:id=>(page.respond_to?(:body_id) ? page.body_id : nil)}
    #header_wrapper
      #header
        %h1 Brandon Mathis
        .nav
          %ul
            %li{:class => (page.respond_to?(:nav) && (page.nav == 'home') ? 'here' : nil)}
              %a(href="/" title="Home") Home
            %li{:class => (page.respond_to?(:nav) && (page.nav == 'work') ? 'here' : nil)}
              %a(href="/work/" title="Work") Work
            %li{:class => (page.respond_to?(:nav) && (page.nav == 'blog') ? 'here' : nil)}
              %a(href="/blog/" title="Blog") Blog
            %li{:class => (page.respond_to?(:nav) && (page.nav == 'about') ? 'here' : nil)}
              %a(href="/about/" title="About") About
    #content_wrapper
      #content
        #page_wrapper
          #page
            .contents
              = content
        #sidebar.aside
          #hire_me.section.alpha.omega
            %img#hire_img(src="/images/hire_me.png" width="80px")
            %h3 Let&rsquo;s Talk.
            %p
              I work on all kinds of projects, from large web applications to simple graphic designs. If you have an idea for a
              project, I’d love to talk to you about it.
    #footer_wrapper
      #footer
        #page_bottom
        .bottom_nav
          .contents
            %a.ucase(href="#") &uarr; back to top
        #about.section
          .contents
            %h5 About Me
            %span.avatar
              %img(src="/content/avatar.jpg")
            %p
              I’m a design enthusiast who’s passionate about my craft. I primarily design
              web applications, but I also love photography, and work on print design
              projects when I can find the time.
              %br
              %a(href="/about/") Read more &rarr;
        #twitter.section
          .contents
            %h5 Twitter
            .tweet
              %p#twitter_status
                Status updating...
            %p.follow
              %img(src="/images/twitter_bird.png")
              %span
                follow
                %a(href="http://twitter.com/imathis") imathis
        #contact.section
          .contents
            %h5 Contact Me
            %ul
              %li <a href="mailto:imathis@me.com">imathis@me.com</a>
              %li +1 (205) 258-8648
