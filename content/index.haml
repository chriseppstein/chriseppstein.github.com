#most-recent-post.mini.blog
  - post = blog_posts.sort_by(&:date).reverse.detect{|p| p.attempt(:featured) && !p.attempt(:draft)}
  - if post.attempt(:stylesheet)
    %link{:href=>"/stylesheets/#{post.stylesheet}.css", :rel=>"stylesheet", :media=>"screen, projection", :type=>"text/css"}
  %h2.description Featured Post
  .section.alpha
    %h1.header
      = link_to(rp(style_amp(post.title)), post.rep_named(:default), {:class=>"title"})
    .article
      = preserve post.rep_named(:default).compiled_content
    .footer
      - unless post.attempt(:comments_off)
        %a(href="#{full_url(post)}/#disqus_thread") Comments
