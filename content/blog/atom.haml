<?xml version="1.0" encoding="utf-8"?>
%feed(xmlns="http://www.w3.org/2005/Atom")
  %title #chris-eppstein {position: unique;}
  %link(href="http://chriseppstein.github.com/atom.xml" rel="self")
  %link(href="http://chriseppstein.github.com/")
  %updated= Time.now.xmlschema
  %id http://chriseppstein.github.com/
  %author
    %name Chris Eppstein
    %email chris[at]eppsteins[dawt]net
  - blog_posts.reject{|p| p.attempt(:draft)}.sort_by(&:date).reverse[0..14].each do |post|
    %entry
      %title&= rp(post.title)
      - if post.attempt(:link)
        %link(href="#{post.link}")
      -else
        %link(href="#{full_url(post)}")
      %updated=post.date.to_local_time.xmlschema
      %id= full_url(post)[0..-2]
      %content(type="html")
        - if post.attempt(:intro)
          = post.intro
        - else
          = preserve absolute_url(rp(post.compiled_content))
        - if post.attempt(:link)
          = h("<p><a href='#{full_url(post)} title='permanent link to #{rp(post.title)}'> &infin; </a><p>")
